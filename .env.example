# BoxHand - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# ALGORAND CONFIGURATION (REQUIRED)
# =============================================================================
EXPO_PUBLIC_ALGOD_TOKEN=
EXPO_PUBLIC_ALGOD_SERVER=https://testnet-api.algonode.cloud
EXPO_PUBLIC_ALGOD_PORT=443
EXPO_PUBLIC_ALGOD_INDEX_SERVER=https://testnet-idx.algonode.cloud

# =============================================================================
# WALLETCONNECT CONFIGURATION (REQUIRED)
# =============================================================================
EXPO_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# =============================================================================
# APP CONFIGURATION
# =============================================================================
EXPO_PUBLIC_APP_NAME=BoxHand
EXPO_PUBLIC_APP_DESCRIPTION=Decentralized Micro-Savings Circles
EXPO_PUBLIC_APP_URL=https://boxhand.app
EXPO_PUBLIC_APP_ICON=https://boxhand.app/icon.png
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG=true